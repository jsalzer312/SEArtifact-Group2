<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <FrameLayout
    android:id="@+id/support_heroimage_container"
    style="@style/Support.HeartView.Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <ImageView
      android:id="@+id/support_heroimage"
      style="@style/Support.HeartView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center" />
  </FrameLayout>

  <TextView
    android:id="@+id/support_description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/support_heroimage_container"
    android:padding="24dp"
    android:text="@string/support_app_description"
    android:textSize="18sp" />


  <Button
    android:id="@+id/support_cancel_button"
    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@id/support_description"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:text="@string/support_app_cancel_button" />

  <Button
    android:id="@+id/support_rate_button"
    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@id/support_description"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:text="@string/support_app_rate_button" />


</RelativeLayout>
