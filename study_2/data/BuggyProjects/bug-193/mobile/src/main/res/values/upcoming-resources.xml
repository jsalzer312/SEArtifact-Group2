<?xml version="1.0" encoding="utf-8"?>
<resources>
  <dimen name="upcoming_vertical_top_padding_between_each_card">8dp</dimen>
  <dimen name="upcoming_vertical_bottom_padding_between_each_card">@dimen/upcoming_vertical_top_padding_between_each_card</dimen>

  <dimen name="upcoming_event_padding_vertical">8dp</dimen>
  <dimen name="upcoming_event_padding_horizontal">16dp</dimen>

  <dimen name="upcoming_initial_size">16sp</dimen>
  <dimen name="upcoming_spacing_indicator">8dp</dimen>

  <dimen name="upcoming_contact_event_avatar_width">42dp</dimen>
  <dimen name="upcoming_contact_event_avatar_height">@dimen/upcoming_contact_event_avatar_width</dimen>
  <string name="plus_x_more">+%d more</string>

  <style name="Upcoming"
    parent="None" />

  <style name="Upcoming.DateTitle">
    <item name="android:paddingTop">24dp</item>
    <item name="android:paddingBottom">16dp</item>

    <item name="android:paddingLeft">@dimen/upcoming_event_padding_horizontal</item>
    <item name="android:paddingRight">@dimen/upcoming_event_padding_horizontal</item>

    <item name="android:textSize">@dimen/card_header_text_size_medium</item>
  </style>

  <style name="Upcoming.Avatar">
    <item name="letterSize">@dimen/upcoming_initial_size</item>
    <item name="isCircle">true</item>
    <item name="android:layout_width">@dimen/upcoming_contact_event_avatar_width</item>
    <item name="android:layout_height">@dimen/upcoming_contact_event_avatar_height</item>
  </style>

  <style name="Upcoming.TodayBackground">
    <item name="android:gravity">center_vertical</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:minHeight">@dimen/size_daymarker</item>
  </style>

  <style name="Upcoming.EventsText">
    <item name="android:paddingLeft">@dimen/padding_tight</item>
    <item name="android:paddingRight">@dimen/padding_tight</item>
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">2</item>
    <item name="android:textColor">@color/card_text</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="Upcoming.EventItem">
    <item name="android:paddingLeft">@dimen/upcoming_event_padding_horizontal</item>
    <item name="android:paddingRight">@dimen/upcoming_event_padding_horizontal</item>
  </style>

  <style name="Upcoming.ShowMore"
    parent="Upcoming.EventItem">
    <item name="android:background">@drawable/selectable_background_dayslight</item>
  </style>


  <style name="Upcoming.ContactName">
    <item name="android:lines">1</item>
  </style>


</resources>
