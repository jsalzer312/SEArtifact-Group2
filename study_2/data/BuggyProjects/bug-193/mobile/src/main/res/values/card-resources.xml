<?xml version="1.0" encoding="utf-8"?>
<resources>
  <dimen name="card_margin">16dp</dimen>
  <dimen name="cardpaddings">12sp</dimen>
  <dimen name="card_padding_horizontal">8dp</dimen>
  <dimen name="card_spacing_between">8dp</dimen>

  <dimen name="card_stack_padding_vertical">8dp</dimen>
  <dimen name="card_content_padding">16dp</dimen>

  <dimen name="card_header_text_size">24sp</dimen>
  <dimen name="card_header_text_size_medium">18sp</dimen>
  <dimen name="card_header_text_size_small">14sp</dimen>

  <dimen name="card_text_size_body_smaller">14sp</dimen>
  <dimen name="card_text_size_body">16sp</dimen>


  <dimen name="card_spacing">16dp</dimen>
  <dimen name="card_contact_avatar_size">135dp</dimen>
  <dimen name="card_padding_from_screen">8dp</dimen>
  <dimen name="card_spacing_half">8dp</dimen>
  <dimen name="mini_card_content_padding">16dp</dimen>
  <dimen name="minicard_text_size_header">18sp</dimen>
  <dimen name="card_text_size_action">14sp</dimen>
  <dimen name="card_action_horizontal_margin">4dp</dimen>
  <dimen name="card_corner_radius">2dp</dimen>


  <style name="Card">
    <item name="android:textSize">@dimen/card_text_size_body</item>
    <item name="android:textColor">@color/card_text</item>
  </style>

  <style name="Card.Header"
    parent="Card">
    <item name="android:textSize">@dimen/card_header_text_size</item>
  </style>

  <style name="Card.Text"
    parent="Card">
    <item name="android:textSize">18sp</item>
  </style>

  <style name="Card.Subtitle"
    parent="Card">
    <item name="android:textSize">@dimen/card_text_size_body_smaller</item>
  </style>

  <style name="Card.Text.Action"
    parent="Base.Widget.AppCompat.Button.Borderless.Colored">
    <item name="android:background">@null</item>
    <item name="android:capitalize">characters</item>
  </style>

</resources>
