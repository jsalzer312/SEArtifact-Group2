<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/pie_marker_height"
    android:background="@drawable/marker_background">

    <TextView
        android:id="@+id/label_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/marker_margin_side"
        android:layout_marginRight="@dimen/marker_margin_side"
        android:layout_marginTop="@dimen/marker_margin_top"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white"
        android:textSize="@dimen/marker_text_size"/>

    <TextView
        android:id="@+id/value_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/label_content"
        android:layout_alignLeft="@+id/label_content"
        android:layout_alignRight="@+id/label_content"
        android:layout_alignStart="@+id/label_content"
        android:layout_below="@+id/label_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/marker_margin_top"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white"
        android:textSize="@dimen/marker_text_size"/>

</RelativeLayout>
