<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical">

    <com.cohenadair.anglerslog.views.InputButtonView
        android:id="@+id/add_photo_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:primaryHint="@string/add_photo"
        custom:iconResource="@drawable/ic_camera"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_input_icon_no_left">

        <LinearLayout
            android:id="@+id/photos_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>