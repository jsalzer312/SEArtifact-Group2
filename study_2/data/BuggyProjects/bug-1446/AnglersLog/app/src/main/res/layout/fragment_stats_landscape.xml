<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/very_light_grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/global_background"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_half"
            android:layout_marginRight="@dimen/margin_half"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_marginBottom="@dimen/margin_half"
            android:orientation="vertical">

            <com.cohenadair.anglerslog.views.DefaultCardView
                android:id="@+id/species_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.cohenadair.anglerslog.views.DefaultCardView
                android:id="@+id/baits_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.cohenadair.anglerslog.views.DefaultCardView
                android:id="@+id/locations_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/stats_column_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_half"
            android:layout_marginRight="@dimen/margin_half"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_marginBottom="@dimen/margin_half"
            android:orientation="vertical">

            <com.cohenadair.anglerslog.views.DefaultCardView
                android:id="@+id/longest_catch_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.cohenadair.anglerslog.views.DefaultCardView
                android:id="@+id/heaviest_catch_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>