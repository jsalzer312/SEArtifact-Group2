<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="3"
    android:orientation="horizontal"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/dialogBackground"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.droidheat.musicplayer.Icon
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_music_notes_padded"
            android:scaleType="centerCrop"
            android:id="@+id/imageView1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Playlist"
            android:textStyle="bold"
            android:background="@color/blackOpaque"
            android:textSize="16sp"
            android:padding="8dp"
            android:paddingStart="56dp"
            android:id="@+id/textView1"
            android:maxLines="1"
            android:textColor="@color/white"
            android:layout_alignBottom="@id/imageView1"/>

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_artists_black_24dp"
            android:tint="@color/whiteOpaque"
            android:padding="5dp"
            android:layout_marginStart="12dp"
            android:layout_alignBottom="@+id/imageView1"
            android:id="@+id/imageView2"/>

    </RelativeLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_marginStart="4dp">



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/dialogBackground"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.droidheat.musicplayer.Icon
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_music_notes_padded"
                    android:id="@+id/imageView3"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Playlist"
                    android:textStyle="bold"
                    android:background="@color/blackOpaque"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:maxLines="1"
                    android:paddingStart="40dp"
                    android:id="@+id/textView2"
                    android:textColor="@color/white"
                    android:layout_alignBottom="@id/imageView3"/>

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/app_playlist"
                    android:tint="@color/whiteOpaque"
                    android:padding="6dp"
                    android:layout_marginStart="4dp"
                    android:layout_alignBottom="@+id/imageView3"
                    android:id="@+id/imageView5"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/dialogBackground"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.droidheat.musicplayer.Icon
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_music_notes_padded"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:id="@+id/imageView4"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Playlist"
                    android:textStyle="bold"
                    android:background="@color/blackOpaque"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:paddingStart="40dp"
                    android:maxLines="1"
                    android:id="@+id/textView3"
                    android:textColor="@color/white"
                    android:layout_alignBottom="@id/imageView4"/>

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/app_playlist"
                    android:tint="@color/whiteOpaque"
                    android:padding="6dp"
                    android:layout_marginStart="4dp"
                    android:layout_alignBottom="@+id/imageView4"
                    android:id="@+id/imageView6"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


</LinearLayout>