<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialogBackground"
    tools:context="com.droidheat.musicplayer.TimerActivity">

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/put_music_player_on_automatic_sleep_"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textColorTitle"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/heading"
        android:layout_alignRight="@+id/heading"
        android:layout_below="@+id/heading"
        android:layout_marginBottom="16dp"
        android:lineSpacingExtra="4dp"
        android:text="@string/music_player_will_automatically_stop_playback_after_your_given_time_please_insert_the_time_in_minutes_below_"
        android:textColor="@color/textColorSubTitle" />

    <TextView
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="46sp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:paddingLeft="10dp"
        android:maxLines="1"
        android:textColor="@color/textColorTitle"/>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editText1"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:weightSum="3" >

        <Button
            android:id="@+id/button2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="24sp"
            android:textStyle="normal"
            android:layout_weight="1"
            android:textColor="@color/textColorTitle"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="@string/_1" />

        <Button
            android:id="@+id/button3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textColor="@color/textColorTitle"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="@string/_2" />

        <Button
            android:id="@+id/button4"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textColor="@color/textColorTitle"
            android:textSize="24sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="@string/_3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:weightSum="3" >

        <Button
            android:id="@+id/Button02"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="24sp"
            android:layout_weight="1"
            android:textColor="@color/textColorTitle"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="@string/_4"/>

        <Button
            android:id="@+id/Button03"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="24sp"
            android:layout_weight="1"
            android:textColor="@color/textColorTitle"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="@string/_5" />

        <Button
            android:id="@+id/Button04"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="24sp"
            android:layout_weight="1"
            android:textColor="@color/textColorTitle"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="@string/_6"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp" >

        <Button
            android:id="@+id/Button05"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="24sp"
            android:textColor="@color/textColorTitle"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="@string/_7"/>

        <Button
            android:id="@+id/Button06"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="24sp"
            android:textColor="@color/textColorTitle"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="@string/_8" />

        <Button
            android:id="@+id/Button07"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="24sp"
            android:layout_weight="1"
            android:textColor="@color/textColorTitle"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="@string/_9"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp" >


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        <ImageView
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:tint="@color/textColorSubTitle"
            android:layout_width="24dp"/>

        <Button
            android:id="@+id/Button01"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="?attr/selectableItemBackgroundBorderless">

        </Button>
        </RelativeLayout>

        <Button
            android:id="@+id/button5"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="24sp"
            android:textColor="@color/textColorTitle"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="@string/_0" />

        <Button
            android:id="@+id/button1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:textColor="@color/accentColor"
            android:textStyle="bold"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:fontFamily="sans-serif-condensed"
            android:textSize="18sp"
            android:text="@string/done" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignRight="@+id/editText1"
        android:layout_below="@+id/editText1"
        android:background="#dcdcdc" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/editText1"
        android:text="@string/sleep_in"
        android:layout_marginTop="14dp"
        android:textColor="@color/textColorTitle"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_alignBottom="@+id/editText1"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/textView3"
        android:text="@string/_0"
        android:textColor="@color/textColorTitle"
        android:layout_marginBottom="5dp"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:text="@string/min"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textColorTitle" />

</RelativeLayout>
