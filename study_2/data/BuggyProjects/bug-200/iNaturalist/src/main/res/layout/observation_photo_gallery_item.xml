<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="50dp"
    android:layout_height="75dp">

    <ImageView
        android:id="@+id/observation_photo"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:src="@drawable/ic_action_email"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        android:background="#5D5B5E"
        />

    <RelativeLayout
        android:id="@+id/observation_is_first"
        android:layout_marginTop="7dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/is_first_on"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_check_circle_black_24dp"
            android:background="#00ffffff"
            android:tint="#74ac00"
            android:visibility="visible"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/is_first_off"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:background="@drawable/circular_border"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:id="@+id/is_first_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:text="@string/first"
            />
    </RelativeLayout>

</LinearLayout>